<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" pannable="true" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventaris.controller.LaporanAdminController">

    <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #f8f9fa;">
        
        <HBox alignment="CENTER_LEFT" spacing="30" />

        <HBox alignment="CENTER_LEFT" spacing="15" />

        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #5D4037;" text="ðŸ“‹ Daftar Laporan Masuk" />
                <Region HBox.hgrow="ALWAYS" />
                <Label style="-fx-font-weight: bold;" text="Filter Status:" />
                <ComboBox fx:id="filterStatusLapor" prefWidth="180" style="-fx-background-color: #f0f0f0; -fx-background-radius: 5;" />
            </HBox>

            <TableView fx:id="allLaporTable" minHeight="500" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colLaporNo" prefWidth="120" text="No. Laporan" />
                    <TableColumn fx:id="colLaporPeminjam" prefWidth="150" text="Peminjam" />
                    <TableColumn fx:id="colLaporBarang" prefWidth="180" text="Barang" />
                    <TableColumn fx:id="colLaporTgl" prefWidth="120" text="Tgl Laporan" />
                    <TableColumn fx:id="colLaporStatus" prefWidth="120" text="Status" />
                    <TableColumn fx:id="colLaporAction" prefWidth="250" text="Aksi" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

    </VBox>
</ScrollPane>
