<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" pannable="true" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventaris.controller.BeritaController">
    <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #f8f9fa;">
        
        <!-- HEADER: Tombol Tambah Berita -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            
            <!-- Tombol Tambah Berita -->
            <Button onAction="#handleAddBerita" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand;" text="âž• Tambah Berita">
                <tooltip><Tooltip text="Tambah berita baru" /></tooltip>
            </Button>
            
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
        
        <!-- TABEL BERITA -->
        <VBox spacing="0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            
            <HBox style="-fx-background-color: #765834; -fx-padding: 15; -fx-background-radius: 10 10 0 0;">
                 <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="DAFTAR BERITA" />
            </HBox>
            
            <TableView fx:id="beritaTable" minHeight="500" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colJudul" prefWidth="200" text="Judul" />
                    <TableColumn fx:id="colDeskripsi" prefWidth="300" text="Deskripsi" />
                    <TableColumn fx:id="colWarna" prefWidth="100" text="Warna" />
                    <TableColumn fx:id="colTanggal" prefWidth="150" text="Tanggal" />
                    <TableColumn fx:id="colAction" prefWidth="200" text="Aksi" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>
</ScrollPane>